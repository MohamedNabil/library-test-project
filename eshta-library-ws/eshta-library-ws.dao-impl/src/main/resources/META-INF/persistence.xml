<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <class>com.siliconnile.library.domain.SampleObject</class>
        <class>com.siliconnile.library.domain.Book</class>
        <class>com.siliconnile.library.domain.Reader</class>
        <class>com.siliconnile.library.domain.BookReader</class>
        <exclude-unlisted-classes />

        <properties>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
            <property name="hibernate.show_sql" value="false" />

            <property name="hibernate.query.factory_class" value="org.hibernate.hql.ast.ASTQueryTranslatorFactory"/>
        </properties>

    </persistence-unit>
</persistence>